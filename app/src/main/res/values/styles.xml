<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="page_title">
        <item name="android:layout_height">@dimen/page_title_height</item>
        <item name="android:background">@mipmap/background</item>
    </style>
    <style name="button_style">
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@null</item>
    </style>
    <style name="back_button_style" parent="button_style">
        <item name="android:drawableLeft">@mipmap/icon_btn_back</item>
        <item name="android:paddingRight">5dip</item>
    </style>
    <style name="page_title_str">
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/title_str_color</item>
    </style>

</resources>
